<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card_main_layout"
        style="@style/card.main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <it.gmariotti.cardslib.library.view.component.CardThumbnailView
            style="@style/card_thumbnail_outer_layout"
            android:id="@+id/card_thumbnail_layout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            card:card_thumbnail_layout_resourceID="@layout/inner_thumbnail_layout"
            android:layout_height="wrap_content" />

        <it.gmariotti.cardslib.library.view.component.CardHeaderView
            style="@style/card.header_outer_layout"
            android:id="@+id/card_header_layout"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- style defined in style.xml -->
        <!-- dimension defines in dimen.xml -->

        <FrameLayout
            android:id="@+id/card_main_content_layout"
            style="@style/Play.card.content_out_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        </LinearLayout>

        <!-- style defined in style.xml -->
        <!-- dimension defines in dimen.xml -->

        <it.gmariotti.cardslib.library.view.component.CardShadowView
            style="@style/card.shadow_outer_layout"
            android:id="@+id/card_shadow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>